		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(3.75, 3.75, 0)) * translate(vec3(animation_la_x, 0, 0));
		tree::lacay();

		model_mat_cpp = mvstack.pop();
		//cánh trái 2.2
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(1.75, 3, 0)) * rotate_z(-30) * translate(vec3(0, 1, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();
		//cánh trái 2.2.1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(2.75, 4.75, 0)) * rotate_z(-60) * translate(vec3(0, 1, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();
		//lá trái 2.2.1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(4.5, 5.75, 0)) * translate(vec3(animation_la_x, 0, 0));
		tree::lacay();

		model_mat_cpp = mvstack.pop();
		//cánh trái 2.2.2
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(2.75, 4.75, 0)) * rotate_z(30) * translate(vec3(0, 1, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();
		//lá trái 2.2.2
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(animation_la_x, 0, 0));
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(2, 6.75, 0)) * scale(vec3(2, 2, 2));
		tree::lacay();

		model_mat_cpp = mvstack.pop();
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(2, 6.75, 1.5)) * scale(vec3(0.5, 0.5, 0.5));
		tree::lacay();

		model_mat_cpp = mvstack.pop();
		model_mat_cpp = mvstack.pop();
		model_mat_cpp = mvstack.pop();
	}
	void draw_tree()
	{
		mvstack.push(model_mat_cpp);
		//gốc cây
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, 1.0, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();

		tree::nhanh1();

		tree::nhanh2();

		//nhanh 3 nho o duoi
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_y(60) * scale(vec3(0.5, 0.5, 0.5));
		tree::nhanh1();

		model_mat_cpp = mvstack.pop();
		//nhanh 4 o tren
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_y(95) * scale(vec3(0.5, 0.5, 0.5));
		tree::nhanh2();

		model_mat_cpp = mvstack.pop();
		model_mat_cpp = mvstack.pop();
	}
}
void tree_real(GLfloat tx = 0, GLfloat ty = 0, GLfloat tz = 0, GLfloat sx = 0.2, GLfloat sy = 0.2, GLfloat sz = 0.2) {
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(tx, ty, tz)) * scale(vec3(sx, sy, sz));
	tree::draw_tree();
	model_mat_cpp = mvstack.pop();
}
#pragma endregion
//--------------ve phong hoc------------
#pragma region room and door
void room()
{

	mvstack.push(model_mat_cpp);
	// trần nhà
	//FillColor(lemon);
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 2.95, -3.5)) * scale(vec3(5.0, 0.01, 7.0));
	setInt("color", 14);
	cube();
	model_mat_cpp = mvstack.pop();

	// tường sau 
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 1, -7)) * scale(vec3(5.0, 4.0, 0.01));
	cube();
	model_mat_cpp = mvstack.pop();

	// tường trước
	//  mảnh tường to trái	
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(1.5, 1.0, 0.0)) * scale(vec3(2.0, 4.0, 0.01));
	cube();
	model_mat_cpp = mvstack.pop();


	//  mảnh tường to phải
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-1.5, 1.0, 0.0)) * scale(vec3(2.0, 4.0, 0.01));
	cube();
	model_mat_cpp = mvstack.pop();

	//  mảnh tường nhỏ giữa
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 2.0, 0.0)) * scale(vec3(1.0, 2.0, 0.01));
	cube();
	model_mat_cpp = mvstack.pop();

	// sàn 
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, -1, -3.5)) * scale(vec3(5.0, 0.01, 7.0));
	cube();
	model_mat_cpp = mvstack.pop();

	// tường trái

	 //mảnh tường to thứ nhất
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-2.5, 2.2, -3.5)) * scale(vec3(0.01, 1.5, 7.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường to thứ hai
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-2.5, -0.25, -3.5)) * scale(vec3(0.01, 1.5, 7.0));
	cube();
	model_mat_cpp = mvstack.pop();

	// tường phải
	//mảnh tường to thứ nhất
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(2.5, 2.2, -3.5)) * scale(vec3(0.01, 1.5, 7.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường to thứ hai
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(2.5, -0.25, -3.5)) * scale(vec3(0.01, 1.5, 7.0));
	cube();
	model_mat_cpp = mvstack.pop();



	//// tường phải
	//mảnh tường nhỏ thứ nhất
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(2.5, 1.0, -6.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường nhỏ thứ hai
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(2.5, 1.0, -4.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường nhỏ thứ ba
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(2.5, 1.0, -2.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường nhỏ thứ bốn
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(2.5, 1.0, -0.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//// tường trái
	//mảnh tường nhỏ thứ nhất
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-2.5, 1.0, -6.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường nhỏ thứ hai
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-2.5, 1.0, -4.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường nhỏ thứ ba
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-2.5, 1.0, -2.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	//mảnh tường nhỏ thứ bốn
	mvstack.push(model_mat_cpp);
	setInt("color", 15);
	model_mat_cpp = model_mat_cpp * translate(vec3(-2.5, 1.0, -0.5)) * scale(vec3(0.01, 1, 1.0));
	cube();
	model_mat_cpp = mvstack.pop();

	model_mat_cpp = mvstack.pop();
}
// cửa
float door_angle = 0.0f;
void door() {
	mvstack.push(model_mat_cpp);
	// Xoay cánh cửa
	mvstack.push(model_mat_cpp);
	setInt("color", 1);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.5, 0, 0))  // Đưa cửa về cạnh trái (trục xoay)
		* rotate_y(door_angle)                                   // Xoay quanh trục Y với góc door_angle
		* translate(vec3(0.5, 0, 0))                             // Đưa cửa về vị trí ban đầu sau khi xoay
		* scale(vec3(1, 2, 0.01));                               // Thay đổi kích thước cửa
	cube();  // Vẽ cánh cửa
	model_mat_cpp = mvstack.pop();

	// Khung cửa trái
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.5, 0, 0)) * scale(vec3(0.05, 2, 0.01));  // Khung trái, cao hơn cánh cửa
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();

	// Khung cửa phải
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.5, 0, 0)) * scale(vec3(0.05, 2, 0.01));  // Khung phải
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();

	// Khung cửa trên
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0, 1, 0)) * scale(vec3(1.05, 0.05, 0.01)); // Khung trên
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();

	model_mat_cpp = mvstack.pop();
}
#pragma endregion
//--------------ve quat tran-----
#pragma region draw ceiling fan
//CEILING FAN quạt trần: chiều cao quạt là 2, độ dài bề ngang là 5 (đã làm tròn) tâm tại (0,0,0) là tâm của base_đỉnh của quạt
namespace fan {
	void fan_blade_x()
	{
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, 0, 0)) 
			* scale(vec3(2.0f, 0.1f, 0.6f)) * rotate_x(30);
		setInt("color", 16);
		cube();
		model_mat_cpp = mvstack.pop();
	}
	void fan_blade_z()
	{
		mvstack.push(model_mat_cpp);
		setInt("color", 16);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, 0, 0)) 
			* scale(vec3(0.6f, 0.1f, 2.0f)) * rotate_z(30);
		cube();

		model_mat_cpp = mvstack.pop();
	}
	void fan_base()
	{
		mvstack.push(model_mat_cpp);
		setInt("color", 16);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, 0, 0)) 
			* scale(vec3(0.8f, 0.2f, 0.8f));
		cube();
		model_mat_cpp = mvstack.pop();
	}
	void ceiling_fan()
	{
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * scale(vec3(0.3, 0.3, 0.3));
		//base dequat
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, -0.1, 0));
		fan::fan_base();
		model_mat_cpp = mvstack.pop();
		//Downrod tru quat
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, -0.9, 0)) 
			* scale(vec3(0.2f, 1.4f, 0.2f));
		setInt("color", 6);
		cube();
		model_mat_cpp = mvstack.pop();
		//Motor Housing bau quat
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, -1.7, 0));
		fan::fan_base();
		model_mat_cpp = mvstack.pop();
		//fan blade 1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_y(Alpha) 
			* translate(vec3(1.4, -1.7, 0));
		fan::fan_blade_x();
		model_mat_cpp = mvstack.pop();
		//fan blade 2
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_y(Alpha) 
			* translate(vec3(-1.4, -1.7, 0));
		fan::fan_blade_x();
		model_mat_cpp = mvstack.pop();
		//fan blade 3
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_y(Alpha) 
			* translate(vec3(0, -1.7, 1.4));
		fan::fan_blade_z();
		model_mat_cpp = mvstack.pop();
		//fan blade 4
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_y(Alpha) 
			* translate(vec3(0, -1.7, -1.4));
		fan::fan_blade_z();
		model_mat_cpp = mvstack.pop();
		model_mat_cpp = mvstack.pop();
	}//}}
}
#pragma endregion
//--------ve diu hoa---------
#pragma region air conditioner
//conditioner size= (2,3,8.4) 
float angle_conditioner = -50.0f;
void conditioner()
{
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * scale(vec3(0.2, 0.2, 0.2));//giam size di 1/4 
	//hộp to
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * scale(vec3(2, 2.7, 8.4));
	setInt("color", 98);
	cube();
	model_mat_cpp = mvstack.pop();
	//hộp nhỏ
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.2, -1.5, 0)) * scale(vec3(1.6, 0.3, 8.4));
	setInt("color", 98);
	cube();
	model_mat_cpp = mvstack.pop();
	//canh ben trai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0, -0.15, 4.2)) * scale(vec3(2, 3, 0.01));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//canh ben phai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0, -0.15, -4.2)) * scale(vec3(2, 3, 0.01));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//cua
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.6, -1.65, 0)) * rotate_z(angle_conditioner);
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0, 0.25, 0)) * scale(vec3(0.01, 0.5, 8.4));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	model_mat_cpp = mvstack.pop();
	model_mat_cpp = mvstack.pop();
}
#pragma endregion
//-----ve window------
#pragma region window
void windown(float tmp) {

	mvstack.push(model_mat_cpp);

	//khung tren
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.275, 0.0)) * scale(vec3(0.05, 0.05, 0.6));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//kinh
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.25, 0.0)) * rotate_z(tmp) * translate(vec3(0.0, -0.25, 0.0)) * scale(vec3(0.02, 0.5, 0.5));
	setInt("color", 9);
	cube();
	model_mat_cpp = mvstack.pop();
	//khung duoi
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, -0.275, 0.0)) * scale(vec3(0.05, 0.05, 0.6));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//khung phai 
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.0, 0.275)) * scale(vec3(0.05, 0.5, 0.05));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//khung trai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.0, -0.275)) * scale(vec3(0.05, 0.5, 0.05));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//tay nam
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.25, 0.0)) * rotate_z(tmp) * translate(vec3(0.0, -0.25, 0.0)) * translate(vec3(0.02, -0.15, 0.0)) * scale(vec3(0.02, 0.02, 0.1));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	model_mat_cpp = mvstack.pop();
}
void windowns(float tx, float ty, float tz, float sx, float sy, float sz, float tmp, int j) {

	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(tx, ty, tz)) * scale(vec3(sx, sy, sz)) * rotate_y(360 / j);
	windown(tmp);
	model_mat_cpp = mvstack.pop();
}
#pragma endregion
//-------ve board---------
#pragma region board
void board() {
	mvstack.push(model_mat_cpp);
	//mat bang
	setInt("color", 2);
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * scale(vec3(0.9, 0.6, 0.05));
	cube();
	model_mat_cpp = mvstack.pop();
	//khung tren
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.325, 0.02)) * scale(vec3(1.0, 0.05, 0.09));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//khung duoi
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, -0.325, 0.02)) * scale(vec3(1.0, 0.05, 0.09));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//khung phai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.475, 0.0, 0.02)) * scale(vec3(0.05, 0.6, 0.09));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//khung trai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.475, 0.0, 0.02)) * scale(vec3(0.05, 0.6, 0.09));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	model_mat_cpp = mvstack.pop();
}
#pragma endregion
//------ve chair----------
#pragma region chair
void chair() {
	mvstack.push(model_mat_cpp);
	//mat ghe
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * scale(vec3(0.6, 0.05, 0.6));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//chong tua trai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.275, 0.325, -0.275)) * scale(vec3(0.05, 0.6, 0.05));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//chong tua phai
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.275, 0.325, -0.275)) * scale(vec3(0.05, 0.6, 0.05));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//tua
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.0, 0.45, -0.275)) * scale(vec3(0.5, 0.3, 0.02));
	setInt("color", 1);
	cube();
	model_mat_cpp = mvstack.pop();
	//chan phai tren
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.275, -0.325, 0.275)) * scale(vec3(0.05, 0.6, 0.05));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//chan trai tren
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.275, -0.325, 0.275)) * scale(vec3(0.05, 0.6, 0.05));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//chan phai duoi
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(0.275, -0.325, -0.275)) * scale(vec3(0.05, 0.6, 0.05));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	//chan trai duoi
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(-0.275, -0.325, -0.275)) * scale(vec3(0.05, 0.6, 0.05));
	setInt("color", 2);
	cube();
	model_mat_cpp = mvstack.pop();
	model_mat_cpp = mvstack.pop();
}
#pragma endregion
//------------------
void boards(float tx, float ty, float tz, float sx, float sy, float sz) {
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(tx, ty, tz)) * scale(vec3(sx, sy, sz));
	board();
	model_mat_cpp = mvstack.pop();
}
void chairs(float tx, float ty, float tz, float sx, float sy, float sz, float tmp, int j) {
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(tmp, 0.0, 0.0)) * translate(vec3(tx, ty, tz)) * scale(vec3(sx, sy, sz)) * rotate_y(360 / j);
	chair();
	model_mat_cpp = mvstack.pop();
}
//-------ve camera-------------
#pragma region camera
bool switch_camera = false;
float camera_angle = 0.0f;
float camera_direction = 1.0f;
void camera() {
	mvstack.push(model_mat_cpp);

	// Base
	mvstack.push(model_mat_cpp);
	setInt("color", 99);
	model_mat_cpp = model_mat_cpp * scale(vec3(0.03, 0.03, 0.12));
	cube();
	model_mat_cpp = mvstack.pop();
	// camera
	mvstack.push(model_mat_cpp);
	setInt("color", 2);
	model_mat_cpp = model_mat_cpp * rotate_y(camera_angle) * translate(vec3(0.0, 0.0, 0.1)) * scale(vec3(0.1, 0.1, 0.2));
	cube();
	model_mat_cpp = mvstack.pop();

	model_mat_cpp = mvstack.pop();
}
void cameras(float tx, float ty, float tz, float sx, float sy, float sz) {
	mvstack.push(model_mat_cpp);
	model_mat_cpp = model_mat_cpp * translate(vec3(tx, ty, tz)) * scale(vec3(sx, sy, sz));
	camera();
	model_mat_cpp = mvstack.pop();
}
