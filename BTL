		model_mat_cpp = mvstack.pop();
		//cánh trái 2.1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(1.75, 3, 0)) * rotate_z(-75) * translate(vec3(0, 1, 0));
