namespace tree {
	void lacay() {
		setInt("color", 5);
		mvstack.push(model_mat_cpp);
		cube();
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * rotate_x(45) * rotate_y(45) * rotate_z(45);
		cube();
		model_mat_cpp = mvstack.pop();
		model_mat_cpp = mvstack.pop();
	}
	void canhcay() {
		setInt("color", 1);
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * scale(vec3(0.2, 2.0, 0.2));
		cube();
		model_mat_cpp = mvstack.pop();
	}
	void nhanh1() {
		mvstack.push(model_mat_cpp);
		//cánh phải 1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0, 2, 0)) * rotate_z(30) * translate(vec3(0, 1, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();
		//cánh phải 1-1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(-1, 3.75, 0)) * rotate_z(-30) * translate(vec3(0, 1, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();
		//lá cây 1-1
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(0.25, 5.5, 0)) * translate(vec3(animation_la_x, 0, 0));
		tree::lacay();

		model_mat_cpp = mvstack.pop();
		//cánh phải 1-2
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(-1, 3.75, 0)) * rotate_z(60) * translate(vec3(0, 1, 0));
		tree::canhcay();

		model_mat_cpp = mvstack.pop();
		//lá cây 1-2
		mvstack.push(model_mat_cpp);
		model_mat_cpp = model_mat_cpp * translate(vec3(-3, 5, 0)) * translate(vec3(animation_la_x, 0, 0));
		tree::lacay();

		model_mat_cpp = mvstack.pop();
		model_mat_cpp = mvstack.pop();
	}
	void nhanh2() {
